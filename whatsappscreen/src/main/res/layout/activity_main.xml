<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorButtonNormal"
    tools:context="com.example.whatsappscreen.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0.5dp"
        android:orientation="horizontal"
        android:padding="06dp"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <EditText
            android:id="@+id/editTxt"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.9"
            android:paddingTop="02dp"
            android:background="@drawable/round_rect"
            android:drawableEnd="@drawable/ic_camera_alt_black_24dp"
            android:drawablePadding="05dp"
            android:drawableStart="@drawable/ic_sentiment_satisfied_black_24dp"
            android:hint="Type a Message"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp" />

        <ImageView
            android:id="@+id/imgSend"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="03dp"
            android:layout_weight="0.1"
            android:background="@drawable/round_shape"
            android:paddingLeft="09dp"
            android:paddingTop="12dp"
            android:src="@drawable/ic_send_black_24dp" />

    </LinearLayout>


</RelativeLayout>
